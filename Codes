apt-get update
apt-get upgrade

echo "deb http://ppa.launchpad.net/webupd8team/java/ubuntu trusty main" | tee /etc/apt/sources.list.d/webupd8team-java.list
echo "deb-src http://ppa.launchpad.net/webupd8team/java/ubuntu trusty main" | tee -a /etc/apt/sources.list.d/webupd8team-java.list
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys EEA14886
apt-get update
apt-get install oracle-java8-installer

apt-get install screen
apt-get insatall nano

cd /home/
mkdir Server1
cd Server1/

nano start.sh : 
screen -S Server1 java -Xmx2G -Xms2G -jar spigot.jar
chmod 777 start.sh
./start.sh
nano eula.txt
./start.sh
Server port ändern
Server auf Offline mode

cd /home
mkdir Server2
cd /home/Server2
nano start.sh : screen -S Server2 java -Xmx2G -Xms2G -jar spigot.jar
chmod 777 start.sh
nano eula.txt
./start.sh
Server port ändern
Server auf Offline mode

cd /home/
mkdir proxy
nano start.sh
screen -A -m -d -S proxy java -jar BungeeCord.jar
screen -S proxy -X BungeeCord.jar
chmod 777 start.sh
